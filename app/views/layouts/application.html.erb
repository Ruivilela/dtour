<!DOCTYPE html>
<html>
  <head>
    <title>DeTour</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application'%>
  </head>
  <body>
<!-- navigation menu -->
<nav class="nav has-shadow columns">
  <div class="column is-1">
  </div>
  <div class="container">
    <img class="logo nav-item" src="/logo/logo.png">
  </div>
  <div class="container">
  </div>
  <span class="notice container nav-item"><%= notice %></span>
  <div class="container">
    <span class="nav-item is-tab is-active is-right"><%= link_to 'Home', landing_page_path, method: 'GET'%> </span>
  <% if user_signed_in? %>
    <span class="nav-item is-tab"><%= link_to 'Band Page', redirect_band_path, method: 'GET' %>
    <span class="nav-item is-tab"><%= link_to 'Sign out', destroy_user_session_path, method: 'DELETE' %>
    </span>
  <% else %>
    <span class="nav-item is-tab"> <%= link_to 'Log in', new_user_session_path %></span>
    <span class="nav-item is-tab is-right"> <%= link_to 'Sign up', new_user_registration_path %> </span>
  <% end %>
 </div>
</nav>
<!-- end of navigation menu -->
    <!-- Devise alerts -->
    <p class="alert"><%= alert %></p>
    <!-- Devise alerts -->
    <%= yield %>
  </body>
</html>
