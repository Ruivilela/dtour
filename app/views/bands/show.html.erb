<br>
<img src="http://www.dropitproject.com/categories/Eightyshades/Eightyshades08.png" class="add_sign" id="add_date">
<br>
<!-- start of tour map --->
<div class="map" id="tourmap"></div>
<!-- end of tour map -->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD61szX4DwMm4p0JkBGN_bBtZUSniJm3bk&libraries=places" defer>
</script>
<div class="modal" id="map_modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Add Tour dates here</p>
      <button id="modal_delete" class="delete"></button>
    </header>
    <section class="modal-card-body">
      <div class="columns">
        <div class="column">
          <input type=text id="insert_gig_place">
          <input type="submit" value="search" id="search_location_modal">
          <input id="date_picker_modal" type="date"/>
          <div class="map" id="tourmap_modal"> </div> <!-- map inside of the modal  -->
        </div>
        <div class="column">
          <center>
            <img src="http://www.dropitproject.com/categories/Eightyshades/Eightyshades08.png" class="add_sign" id="add_gig">
            <span> Add Gig </span>
            <br>
            <ul id="list_of_gigs">
              <%@tourdate.each do |gig|%>
                <li class="gig_date" id="<%=gig.id%>" onmouseover="ShowDeleteButton(this)" onmouseout="HideDeleteButton(this)">
                  <%= gig.address %> ( <%= gig.date %> )
                  <img class="delete_button_modal hidden" src="http://image.flaticon.com/icons/png/128/70/70287.png" id="deletedatemodal_<%=gig.id%>" onclick="removeDate(this)" >
                </li>
              <%end%>
            </ul>
          </center>
        </div>
      </div>
    </section>
    <footer class="modal-card-foot">
      <a class="button is-primary" id="save_added_gig">Save changes</a>
      <a class="button" id="modal_cancel">Cancel</a>
    </footer>
  </div>
</div>
